{% schema %}
{
  "name": "Application Form",
  "settings": []
}
{% endschema %}

<main class="container page-template" role="main" aria-label="Page content">
  <div class="application-form-wrapper">
    <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8">
      <input type="hidden" name="form_type" value="contact">
      {{ form | csrf_token }}

      <p class="form-description">Please fill out the form below to get in touch with us. We will respond as soon as possible.</p>

      <div>
        <label>Your Name</label>
        <input type="text" name="contact[name]" required>
      </div>

      <div>
        <label>Your Email</label>
        <input type="email" name="contact[email]" required>
      </div>

      <div>
        <label>Topic</label>
        <select name="contact[topic]">
          <option value="Wholesale">Wholesale</option>
          <option value="Partnership">Partnership</option>
          <option value="Support">Support</option>
        </select>
      </div>

      <div>
        <label>Message</label>
        <textarea name="contact[body]" rows="5"></textarea>
      </div>

      <button type="submit">Send</button>
    </form>

    {% if form.posted_successfully? %}
      <p class="success-message">Thank you! Your message was sent.</p>
    {% elsif form.errors %}
      <p class="error-message">There was an error sending your message. Please try again.</p>
    {% endif %}
  </div>
</main>
