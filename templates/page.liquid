<style>
  .page-template .page-title {
    font-size: 2rem;
    margin: 0 0 16px;
    font-weight: 600;
  }
  .page-template .page-content {
    line-height: 1.6;
    color: #333;
    margin-bottom: 48px;
  }
  .page-template .page-empty {
    color: #666;
    font-style: italic;
  }
  @media (max-width: 600px) {
    .page-template {
      padding: 0 16px;
      margin: 24px auto;
    }
    .page-template .page-title {
      font-size: 1.5rem;
    }
  }
</style>

<main class="container page-template" role="main" aria-label="Page content">
  {% if page.title %}
    <h1 class="page-title">{{ page.title }}</h1>
  {% endif %}

  {% if page.content != blank %}
    <div class="page-content rte">
      {{ page.content }}
    </div>
  {% else %}
    <div class="page-content page-empty">
      <p>This page has no content yet.</p>
    </div>
  {% endif %}
</main>
