<style>
  .cart-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }

  .cart-items {
    margin: 20px 0;
  }

  .cart-item {
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 20px;
    padding: 20px;
    border-bottom: 1px solid #eee;
  }

  .item-details {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .quantity {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .quantity input {
    width: 60px;
    padding: 5px;
  }

  .cart-footer {
    margin-top: 20px;
    text-align: right;
  }

  .subtotal {
    font-size: 1.2em;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .checkout-button,
  .update-cart {
    color: #fff;
    border: none;
    padding: 12px 24px;
    margin: 5px 0;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .checkout-button {
    background-color: #000;
    color: white;
  }

  .update-cart {
    background-color: #f0f0f0;
    color: #333;
  }

  .checkout-button:hover {
    background-color: #333;
  }

  .empty-cart {
    text-align: center;
    padding: 40px;
  }

  .continue-shopping {
    display: inline-block;
    padding: 10px 20px;
    background-color: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    margin-top: 20px;
  }
</style>

<div class="cart-container">
  {% if cart.item_count > 0 %}
    <h1>Your Cart ({{ cart.item_count }} items)</h1>

    <div class="cart-items">
      {% for item in cart.items %}
        <div class="cart-item">
          {% if item.image %}
            <img src="{{ item.image | img_url: '100x100' }}" alt="{{ item.title }}">
          {% endif %}

          <div class="item-details">
            <h3>{{ item.product.title }}</h3>
            {% if item.variant.title !== 'Default title' %}
              <p>{{ item.variant.title }}</p>
            {% endif %}
            <p>Price: {{ item.price | money }}</p>

            <div class="quantity">
              <label for="quantity-{{ forloop.index }}">Quantity:</label>
              {{ item.quantity }}
            </div>
          </div>

          <p class="item-total">Total: {{ item.final_line_price | money }}</p>
        </div>
      {% endfor %}
    </div>

    <div class="cart-footer">
      <p class="subtotal">Subtotal: {{ cart.total_price | money }}</p>
      <form action="/checkout" method="post">
        <button type="submit" class="checkout-button">Proceed to Checkout</button>
      </form>
    </div>

  {% else %}
    <div class="empty-cart">
      <h2>Your cart is empty</h2>
      <a href="/collections/all" class="continue-shopping">Continue Shopping</a>
    </div>
  {% endif %}
</div>
